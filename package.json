    "url": "https://github.com/moonrepo/run-report-action"
  },
  "author": "Miles Johnson",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.9.1",
    "@actions/github": "^5.0.3",
    "@moonrepo/types": "^0.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.19.0",
    "@types/node": "^18.7.17",
    "@vercel/ncc": "^0.34.0",
    "babel-preset-moon": "^1.0.1",
    "eslint": "^8.23.1",
    "eslint-config-moon": "^1.0.1",
    "jest": "^29.0.3",
    "jest-preset-moon": "^1.0.1",
    "prettier": "^2.7.1",
    "prettier-config-moon": "^1.0.1",
    "tsconfig-moon": "^1.0.1",
    "typescript": "^4.8.3"
  }
