{
  "name": "@moonrepo/run-report-action",
  "version": "0.0.1",
  "description": "A GitHub action for displaying a run report within a pull request. ",
  "main": "dist/index.mjs",
  "scripts": {
    "build": "ncc build ./index.mjs",
    "check": "npm run lint && npm run test && npm run typecheck",
    "deps": "npx npm-check-updates --interactive",
